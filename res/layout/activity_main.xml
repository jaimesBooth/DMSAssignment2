<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" 
    android:background="#FFFF99"
    android:orientation="vertical" >

 

    <Button
        android:id="@+id/bDiscoverable"
        android:background="#FF9900"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
          android:textColor="#FF3300"
          android:textSize="15dp"
        android:text="@string/label_discoverable" />

    <Button
        android:id="@+id/bCreate"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bJoin"
        android:layout_centerVertical="true"
        android:text="@string/label_create"
        android:textSize="15dp"
        android:background="#FF9900"
        android:textColor="#FF3300" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bCreate"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/select_mode"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF3300" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/heading_home"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF3300"
        android:textSize="50dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bJoin"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bCreate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="#FF9900"
        android:text="@string/label_join"
        android:textSize="15dp"
        android:textColor="#FF3300" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bDiscoverable"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="@string/unknown"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF3300"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvStatus"
        android:layout_centerHorizontal="true"
        android:text="@string/bluetooth_status"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF3300"
        android:textSize="10dp" />

</RelativeLayout>